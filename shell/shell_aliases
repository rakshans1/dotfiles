
# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.

# Shortcuts
alias v="nvim"
alias vim="nvim"
alias t="tmux"
alias x+="chmod +x"
alias hosts="sudo nvim /etc/hosts"
alias update="sudo apt-get update"
alias upgrade="sudo apt-get upgrade"
alias npmlist="npm list -g --depth 0"

case $( uname -s ) in
  Darwin)   ;;
  *)  alias open='xdg-open';;
esac

# Git alias
unalias gco

# IP addresses
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias myip="ip a | grep 'inet ' | grep -v 127.0.0.1 | awk '{print \$2}'"


# Download file and save it with filename of remote file
alias get="curl -O -L"


# Recursively delete node_modules folder
alias clean_node_modules="find . -name "nodemodules" -type d -prune -exec rm -rf '{}' +"

# File size
alias fs="ls -sh"

# zshrc config
alias zshrc="vim ~/.zshrc"
alias reload_zsh="source ~/.zshrc && echo 'Shell config reloaded from ~/.zshrc'"
