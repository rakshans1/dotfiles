# Shortcuts
alias nvim=rvim
alias v="rvim"
alias vim="nvim"
alias x+="chmod +x"
alias top="btm"
alias s="subl"
alias c="cursor ."
alias ls="exa"
alias cl="clear"
alias r=just

case $( uname -s ) in
  Darwin)   ;;
  *)  alias open='xdg-open';;
esac

# Git alias
unalias gco
unalias gcm

# IP addresses
alias pubip="dig +short myip.opendns.com @resolver1.opendns.com"
alias myip="ip a | grep 'inet ' | grep -v 127.0.0.1 | awk '{print \$2}'"


# Download file and save it with filename of remote file
alias get="curl -O -L"

alias yolo-claude="claude --dangerously-skip-permissions"
alias yolo-codex='codex -m gpt-5-codex -c model_reasoning_effort="high" --yolo --search'
alias :q="exit"
alias :c="clear"
